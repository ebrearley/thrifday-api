{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@auth/*": ["src/auth/*"],
      "@shared/*": ["src/shared/*"],
      "@users/*": ["src/users/*"],
      "@retailers/*": ["src/retailers/*"],
      "@products/*": ["src/products/*"]
    }
  }
}
